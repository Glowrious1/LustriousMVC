@model Lustrious.Models.Cliente

@{
	Layout = "~/Views/Shared/_Layout.cshtml";
	ViewData["Title"] = "Editar Cliente";
}
<div class="card">
	@if(!ViewData.ModelState.IsValid)
	{
		<div class="validation">
			@foreach (var e in ViewData.ModelState.Values.SelectMany(v => v.Errors))
			{
				<div>@e.ErrorMessage</div>
			}

		</div>

	}
</div>

<form asp-action="EditarCliente" method="post">
	@Html.AntiForgeryToken()
	<input type="hidden" asp-for="IdClient" />

	<div>
		<label>Nome</label>
		<input asp-for="Nome"  required/>
	</div>
	<div>
		<label>CPF</label>
		<input asp-for="CPF" required />
	</div>
	<div>
		<label>Email</label>
		<input asp-for="Email" required />
	</div>
	<div>
		<label>Senha</label>
		<input asp-for="Senha" required />
	</div>
	<button type="submit">Salvar</button>
</form>