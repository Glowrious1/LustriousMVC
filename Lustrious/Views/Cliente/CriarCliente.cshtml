@model Lustrious.Models.Cliente

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Cadastrar Cliente";

}

<style>
    /* === GERAL === */
    body {
        margin: 0;
        padding: 0;
        background-color: #c7b99e; /* fundo bege */
        font-family: 'Times New Roman', serif;
    }

    /* === NAVBAR === */
    header {
        background-color: #fff;
        border-bottom: 4px solid #e8d09d;
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 12px 50px;
        box-sizing: border-box;
    }

    .logo {
        font-family: 'Times New Roman', serif;
        color: #b68c5a;
        font-size: 20px;
        font-weight: bold;
        letter-spacing: 1px;
    }

    .nav-links {
        display: flex;
        align-items: center;
        gap: 25px;
    }

        .nav-links a {
            text-decoration: none;
            color: #000;
            font-size: 14px;
            letter-spacing: 0.5px;
            position: relative;
        }

            .nav-links a:hover {
                color: #b68c5a;
            }

            /* Linha dourada "|" separando links */
            .nav-links a + a::before {
                content: "|";
                color: #b68c5a;
                margin-right: 25px;
                font-weight: bold;
            }

    /* === CARD CENTRAL === */
    .card {
        background-color: #f6f0cc;
        border-radius: 15px;
        padding: 40px;
        width: 500px;
        margin: 80px auto;
        box-shadow: 0 0 0 5px #c7b99e;
        border: 3px solid #d1b97f;
        text-align: center;
    }

        .card h2 {
            font-size: 20px;
            font-weight: bold;
            color: #000;
            margin-bottom: 25px;
            letter-spacing: 1px;
        }

  

    /* === FORMULÁRIO === */
    .form-group {
        margin-bottom: 20px;
        text-align: left;
    }

        .form-group label {
            display: block;
            font-size: 12px;
            font-weight: bold;
            color: #000;
            margin-bottom: 5px;
        }

        .form-group input {
            width: 100%;
            padding: 8px;
            border: 1px solid #d1b97f;
            border-radius: 5px;
            background-color: #fff;
            font-size: 12px;
        }

    /* === BOTÕES === */
    .actions {
        display: flex;
        justify-content: center;
        gap: 15px;
        margin-top: 25px;
    }

    .btn-submit {
        background-color: #b5a271;
        color: #fff;
        border: none;
        padding: 8px 20px;
        border-radius: 5px;
        cursor: pointer;
        font-size: 12px;
        transition: 0.3s ease;
    }

        .btn-submit:hover {
            background-color: #a08d5c;
            color: #fff;
        }
</style>


<div class="card">

    <h2 >Cadastrar Cliente</h2> 
    

    <form asp-action="CriarCliente" method="post">
        @Html.AntiForgeryToken()

        <div class="form-group">
            <label>Nome</label>
            <input asp-for="Nome" required />
        </div>

        <div class="form-group">
            <label>CPF</label>
            <input asp-for="CPF" required />
        </div>

        <div class="form-group">
            <label>Email</label>
            <input asp-for="Email" required />
        </div>

        <div class="form-group">
            <label>Senha</label>
            <input asp-for="Senha" type="password" required />
        </div>

        <div class="actions">
            <button type="submit" class="btn-submit">Salvar</button>
        </div>
    </form>
</div>
