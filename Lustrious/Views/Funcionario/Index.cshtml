@model IEnumerable<Lustrious.Models.Funcionario>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Funcionario";
}


<div class="card">
    <h2>Funcionários</h2>

    @if (TempData["ok"] != null)
    {
        <div class="ok">@TempData["ok"]</div>
    }

    <p><a asp-action="CriarFuncionario" class="btn-submit">Novo Funcionario</a></p>

    <table class="tbl tbl-autor">
        <thead>
            <tr>
                <th>#</th>
                <th>Nome</th>
                <th>Email</th>
                <th>Senha</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var l in Model)
            {
                <tr>
                    <td>@l.IdFun</td>
                    <td>@l.Nome</td>
                    <td>@l.Email</td>
                    <td>@l.Senha</td>
                    <td>
                        <div class="acoes">
                            <form asp-action="EditarFuncionario" method="get" style="display:inline-block;">
                                <input type="hidden" name="id" value="@l.IdFun" />
                                <button type="submit" class="btn btn-editar">Editar</button>
                            </form>
                            <form asp-action="ExcluirFuncionario" method="post" style="display:inline-block;" onsubmit="return confirm('Excluir este Cliente?');">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="id" value="@l.IdFun" />
                                <button type="submit" class="btn btn-excluir">Excluir</button>
                            </form>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<style>
    /* === NAVBAR EXATAMENTE IGUAL À DA HOME === */
    header {
        z-index: 10;
        box-sizing: border-box;
        border-bottom: 4px solid #c7b99e;
        background-color: #fff;
        padding: 10px 0;
    }

    .navbar {
        display: flex;
        align-items: center;
        justify-content: flex-start;
        gap: 40px; /* espaço entre logo e links */
        padding-left: 60px; /* mesmo espaçamento da Home */
    }

    .logo {
        font-size: 18px;
        color: #b5954b;
        text-align: center;
        font-weight: bold;
        line-height: 1.2;
    }

        .logo span {
            font-size: 12px;
            color: #a78643;
            letter-spacing: 1px;
        }

    nav {
        display: flex;
        align-items: center;
    }

        nav a {
            text-decoration: none;
            color: #000;
            margin: 0 25px;
            font-weight: 500;
            position: relative;
        }

            nav a:not(:last-child)::after {
                content: "";
                position: absolute;
                right: -25px;
                top: 0;
                height: 100%;
                width: 1px;
                background-color: #d6b36a;
            }

    /* === RESTO DO ESTILO ORIGINAL === */
    body {
        background-color: #c1b39c;
        font-family: "Poppins", sans-serif;
        margin: 0;
        padding: 0;
    }

    .card {
        background-color: #f8f4d8;
        border: 4px solid #c6a756;
        border-radius: 20px;
        padding: 30px;
        width: 80%;
        max-width: 900px;
        margin: 60px auto;
        box-shadow: 0 4px 10px rgba(0,0,0,0.1);
    }

        .card h2 {
            text-align: center;
            color: #2b2111;
            font-weight: 600;
            font-size: 22px;
            margin-bottom: 25px;
            letter-spacing: 1px;
        }

    .btn-submit {
        float: right;
        background-color: #d2c8ad;
        color: #2b2111;
        padding: 8px 15px;
        border-radius: 8px;
        font-size: 13px;
        text-decoration: none;
        border: none;
        transition: background 0.2s ease;
    }

        .btn-submit:hover {
            background-color: #c6b990;
        }

    table.tbl {
        width: 100%;
        border-collapse: collapse;
        margin-top: 15px;
        font-size: 14px;
    }

        table.tbl th {
            text-align: left;
            color: #2b2111;
            font-weight: 500;
            padding: 10px 5px;
            border-bottom: 1px solid #2b2111;
        }

        table.tbl td {
            padding: 10px 5px;
            color: #2b2111;
            border-bottom: 1px solid #ccc;
        }

    .acoes {
        display: flex;
        gap: 8px;
    }

    .btn {
        border: none;
        padding: 6px 14px;
        border-radius: 6px;
        cursor: pointer;
        font-size: 13px;
        font-weight: 500;
        transition: background 0.2s ease;
    }

    .btn-editar {
        background-color: #c3b79a;
        color: #2b2111;
    }

        .btn-editar:hover {
            background-color: #b3a681;
        }

    .btn-excluir {
        background-color: #a4423a;
        color: #fff;
    }

        .btn-excluir:hover {
            background-color: #8c362f;
        }

    .ok {
        background-color: #d8f3dc;
        color: #1b4332;
        padding: 8px;
        border-radius: 5px;
        text-align: center;
        margin-bottom: 10px;
        font-size: 13px;
    }
</style>
