@model Lustrious.Models.Funcionario

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Editar Funcionario";
}

<style>
    /* === GERAL === */
    body {
        margin: 0;
        padding: 0;
        background-color: #c7b99e; /* fundo bege */
        font-family: 'Times New Roman', serif;
    }

    /* === NAVBAR === */
    header {
        background-color: #fff;
        border-bottom: 4px solid #e8d09d;
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 12px 50px;
        box-sizing: border-box;
    }

    .logo {
        font-family: 'Times New Roman', serif;
        color: #b68c5a;
        font-size: 20px;
        font-weight: bold;
        letter-spacing: 1px;
    }

    .nav-links {
        display: flex;
        gap: 60px;
    }

        .nav-links a {
            text-decoration: none;
            color: #000;
            font-size: 14px;
            letter-spacing: 0.5px;
        }

            .nav-links a:hover {
                color: #b68c5a;
            }

    /* === CONTAINER CENTRAL === */
    .card {
        background-color: #f6f0cc; /* amarelo claro */
        border-radius: 15px;
        padding: 40px;
        width: 500px;
        margin: 80px auto;
        box-shadow: 0 0 0 5px #c7b99e;
        border: 3px solid #d1b97f;
        text-align: center;
    }

        .card h2 {
            font-size: 20px;
            font-weight: bold;
            color: #000;
            margin-bottom: 25px;
            letter-spacing: 1px;
        }

    /* === FORMULÁRIO === */
    .form-group {
        margin-bottom: 20px;
        text-align: left;
    }

        .form-group label {
            display: block;
            font-size: 12px;
            font-weight: bold;
            color: #000;
            margin-bottom: 5px;
        }

        .form-group input {
            width: 100%;
            padding: 8px;
            border: 1px solid #d1b97f;
            border-radius: 5px;
            background-color: #fff;
            font-size: 12px;
        }

    /* === BOTÕES === */
    .actions {
        display: flex;
        justify-content: center;
        gap: 15px;
        margin-top: 25px;
    }

    .btn-submit {
        background-color: #b5a271;
        color: #fff;
        border: none;
        padding: 8px 20px;
        border-radius: 5px;
        cursor: pointer;
        font-size: 12px;
    }

        .btn-submit:hover {
            background-color: #a08d5c;
        }

    .btn-cancel {
        background-color: #9c2b2b; /* cor de fundo normal */
        color: #fff; /* cor do texto normal */
        text-decoration: none;
        padding: 8px 20px;
        border-radius: 5px;
        font-size: 12px;
        display: inline-block;
        transition: all 0.3s ease; /* suaviza a mudança de cor */
    }

        .btn-cancel:hover {
            background-color: #5B1A1A; /* cor de fundo quando o mouse estiver em cima */
            color: #fff; /* cor do texto quando o mouse estiver em cima */
        }


    /* === VALIDAÇÃO === */
    .validation {
        color: red;
        font-size: 13px;
        margin-bottom: 15px;
    }
</style>

<div class="card">
    <h2>EDITAR FUNCIONARIO</h2>

    @if (!ViewData.ModelState.IsValid)
    {
        <div class="validation">
            @foreach (var e in ViewData.ModelState.Values.SelectMany(v => v.Errors))
            {
                <div>@e.ErrorMessage</div>
            }
        </div>
    }

    <form asp-action="EditarFuncionario" method="post">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="IdFun" />

        <div class="form-group">
            <label for="Nome">NOME DO FUNCIONÁRIO:</label>
            <input asp-for="Nome" placeholder="Digite o nome aqui..." required />
        </div>

        <div class="form-group">
            <label for="Email">EMAIL:</label>
            <input asp-for="Email" placeholder="Digite o email aqui..." required />
        </div>

        <div class="form-group">
            <label for="Senha">SENHA:</label>
            <input asp-for="Senha" type="password" placeholder="Digite a senha aqui..." required />
        </div>

        <div class="actions">
            <button type="submit" class="btn-submit">EDITAR</button>
            <a asp-action="Index" class="btn-cancel">CANCELAR</a>
        </div>
    </form>
</div>
