@model IEnumerable<Lustrious.Models.Venda>
@{
 ViewData["Title"] = "Todas Vendas";
}
<h2>Todas Vendas</h2>
<table class="table">
 <thead>
 <tr>
 <th>Id</th>
 <th>Data</th>
 <th>Usuário</th>
 <th>Valor</th>
 <th>NF</th>
 <th>Entrega</th>
 </tr>
 </thead>
 <tbody>
 @foreach(var v in Model)
 {
 <tr>
 <td>@v.IdVenda</td>
 <td>@v.DataVenda</td>
 <td>@v.IdUser</td>
 <td>@v.ValorTotal.ToString("C")</td>
 <td>@v.NF</td>
 <td>@v.IdEntrega</td>
 </tr>
 }
 </tbody>
</table>
