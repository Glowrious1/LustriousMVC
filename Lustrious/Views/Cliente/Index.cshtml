@model IEnumerable<Lustrious.Models.Cliente>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Clientes";
}

<style>
    /* === GERAL === */
    body {
        margin: 0;
        padding: 0;
        background-color: #c7b99e; /* fundo bege */
        font-family: 'Times New Roman', serif;
    }

    /* === NAVBAR === */
    header {
        background-color: #fff;
        border-bottom: 4px solid #e8d09d;
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 12px 50px;
        box-sizing: border-box;
    }

    .logo {
        font-family: 'Times New Roman', serif;
        color: #b68c5a;
        font-size: 20px;
        font-weight: bold;
        letter-spacing: 1px;
    }

    .nav-links {
        display: flex;
        gap: 60px;
    }

        .nav-links a {
            text-decoration: none;
            color: #000;
            font-size: 14px;
            letter-spacing: 0.5px;
        }

            .nav-links a:hover {
                color: #b68c5a;
            }

    /* === CARD === */
    .card {
        background-color: #f6f0cc;
        border-radius: 15px;
        padding: 40px;
        width: 80%;
        max-width: 900px;
        margin: 80px auto;
        box-shadow: 0 0 0 5px #c7b99e;
        border: 3px solid #d1b97f;
        text-align: center;
    }

        .card h2 {
            font-size: 20px;
            font-weight: bold;
            color: #000;
            margin-bottom: 25px;
            letter-spacing: 1px;
        }

    /* === MENSAGENS === */
    .ok {
        background-color: #b5a271;
        color: #fff;
        padding: 10px;
        border-radius: 5px;
        margin-bottom: 15px;
        font-size: 14px;
    }

    /* === BOTÕES === */
    .btn-submit {
        background-color: #b5a271;
        color: #fff;
        text-decoration: none;
        padding: 8px 20px;
        border-radius: 5px;
        font-size: 12px;
        border: none;
        cursor: pointer;
        transition: 0.3s ease;
    }

        .btn-submit:hover {
            background-color: #a08d5c;
        }

    .btn {
        padding: 6px 14px;
        border-radius: 5px;
        font-size: 12px;
        border: none;
        cursor: pointer;
        transition: 0.3s ease;
    }

    .btn-editar {
        background-color: #b5a271;
        color: #fff;
    }

        .btn-editar:hover {
            background-color: #a08d5c;
            color: #fff;
        }

    .btn-excluir {
        background-color: #9c2b2b;
        color: #fff;
        
    }

        .btn-excluir:hover {
            background-color: #5b1a1a;
            color: #fff;
        }

    /* === TABELA === */
    .tbl {
        width: 100%;
        border-collapse: collapse;
        margin-top: 20px;
        font-size: 13px;
        background-color: #fff;
        border-radius: 10px;
        overflow: hidden;
    }

        .tbl th {
            background-color: #e8d09d;
            color: #000;
            padding: 10px;
            text-align: center;
            border-bottom: 2px solid #d1b97f;
        }

        .tbl td {
            padding: 10px;
            border-bottom: 1px solid #ddd;
            text-align: center;
        }

        .tbl tr:hover {
            background-color: #f4ecd4;
        }

    /* === AÇÕES === */
    .acoes {
        display: flex;
        justify-content: center;
        gap: 10px;
    }
</style>

<div class="card">
    <h2>CLIENTES</h2>

    @if (TempData["ok"] != null)
    {
        <div class="ok">@TempData["ok"]</div>
    }

    <p><a asp-action="CriarCliente" class="btn-submit">NOVO CLIENTE</a></p>

    <table class="tbl tbl-autor">
        <thead>
            <tr>
                <th>#</th>
                <th>Nome</th>
                <th>CPF</th>
                <th>Email</th>
                <th>Senha</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var l in Model)
            {
                <tr>
                    <td>@l.IdClient</td>
                    <td>@l.Nome</td>
                    <td>@l.CPF</td>
                    <td>@l.Email</td>
                    <td>@l.Senha</td>
                    <td>
                        <div class="acoes">
                            <form asp-action="EditarCliente" method="get" style="display:inline-block;">
                                <input type="hidden" name="id" value="@l.IdClient" />
                                <button type="submit" class="btn btn-editar">EDITAR</button>
                            </form>
                            <form asp-action="ExcluirCliente" method="post" style="display:inline-block;" onsubmit="return confirm('Excluir este Cliente?');">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="id" value="@l.IdClient" />
                                <button type="submit" class="btn btn-excluir">EXCLUIR</button>
                            </form>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

