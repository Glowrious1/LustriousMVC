@model IEnumerable<Lustrious.Models.Cliente>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Clientes";
}

<div class="card">
    <h2>Clientes</h2>

    @if (TempData["ok"] != null)
    {
        <div class="ok">@TempData["ok"]</div>
    }

    <p><a asp-action="CriarCliente" class="btn-submit">Novo Cliente</a></p>

    <table class="tbl tbl-autor">
        <thead>
            <tr>
                <th>#</th>
                <th>Nome</th>
                <th>CPF</th>
                <th>Email</th>
                <th>Senha</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var l in Model)
            {
                <tr>
                    <td>@l.IdClient</td>
                    <td>@l.Nome</td>
                    <td>@l.CPF</td>
                    <td>@l.Email</td>
                    <td>@l.Senha</td>
                    <td>
                        <div class="acoes">
                            <form asp-action="EditarCliente" method="get" style="display:inline-block;">
                                <input type="hidden" name="id" value="@l.IdClient" />
                                <button type="submit" class="btn btn-editar">Editar</button>
                            </form>
                            <form asp-action="ExcluirCliente" method="post" style="display:inline-block;" onsubmit="return confirm('Excluir este Cliente?');">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="id" value="@l.IdClient" />
                                <button type="submit" class="btn btn-excluir">Excluir</button>
                            </form>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<style>
    body {
        background-color: #363636;
        color: #fff;
        font-family: 'Poppins', sans-serif;
    }

    .card {
        background-color: #212121;
        padding: 25px;
        margin: 50px auto;
        border-radius: 12px;
        max-width: 900px;
        box-shadow: 0px 4px 10px rgba(0,0,0,0.3);
        color: white;
    }

    h2 {
        margin-bottom: 20px;
        font-weight: 600;
        color: white;
    }

    .ok {
        background-color: #28a745;
        padding: 10px;
        border-radius: 6px;
        margin-bottom: 15px;
        color: white;
        font-weight: 500;
    }

    .tbl {
        width: 100%;
        border-collapse: collapse;
        margin-top: 15px;
        border-radius: 8px;
        overflow: hidden;
    }

        .tbl th, .tbl td {
            padding: 10px;
            text-align: left;
            border-bottom: 1px solid #444;
        }

        .tbl tr:hover {
            background-color: #333;
        }

    .acoes form {
        display: inline-block;
        margin-right: 5px;
    }

    .btn, .btn-editar, .btn-excluir, .btn-submit {
        background-color: #99694E;
        border: none;
        padding: 8px 16px;
        border-radius: 8px;
        font-weight: bold;
        cursor: pointer;
        color: #fff;
        transition: background-color 0.3s;
    }

        .btn:hover, .btn-editar:hover, .btn-submit:hover {
            background-color: #8a5946;
        }

    .btn-excluir {
        background-color: #d9534f;
    }

        .btn-excluir:hover {
            background-color: #c9302c;
        }
</style>
