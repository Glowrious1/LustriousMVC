@model IEnumerable<Lustrious.Models.Usuario>

@{
    ViewData["Title"] = "Clientes";
}

<main class="main-content">
    <div class="card">
        <div class="card-header">
            <h2>CLIENTES</h2>
            <a class="new-btn" href="/Cliente/CriarCliente">NOVO CLIENTE</a>
        </div>

        <table class="table-clientes">
            <thead>
                <tr>
                    <th>FOTO</th>
                    <th>NOME</th>
                    <th>EMAIL</th>
                    <th>Sexo</th>
                    <th>CPF</th>
                    <th>Ações</th>
                </tr>
            </thead>

            <tbody>
                <!-- Vai repetir os clientes -->
                @foreach (var cliente in Model)
                {
                    var fotoVal = cliente.Foto ?? string.Empty;
                    var fileName = System.IO.Path.GetFileName(fotoVal.Replace('\\','/'));
                    var imgSrc = string.IsNullOrWhiteSpace(fileName)
                        ? Url.Content("~/imagens/capa_foto.png")
                        : Url.Content("~/fotosUsuario/" + fileName);

                    <tr>
                        <td>
                            <div style="width:60px;height:60px;overflow:hidden;border-radius:8px;">
                                <img src="@imgSrc" alt="Foto do cliente" class="cliente-foto" />
                            </div>
                        </td>
                        <td>@cliente.Nome</td>
                        <td>@cliente.Email</td>
                        <td>@cliente.Sexo</td>
                        <td>@cliente.CPF</td>
                        <td>
                            <a class="edit-btn" asp-controller="Cliente" asp-action="EditarCliente" asp-route-id="@cliente.IdUser">EDITAR</a>
                            <a asp-controller="Cliente" asp-action="ExcluirCliente" asp-route-id="@cliente.IdUser" onclick="return confirm('Deseja realmente Excluir este item?');" class="delete-btn">EXCLUIR</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</main>

<style>
    body {
        margin: 0;
        padding: 0;
        background-color: #FFEFCC;
        font-family: 'Times New Roman', serif;
    }

    /* NAVBAR */
    .navbar-container {
        background: white;
        border-bottom: 5px solid #b5954b;
        padding: 15px 50px;
    }

    .navbar {
        display: flex;
        align-items: center;
        gap: 40px;
    }

    .logo {
        color: #b5954b;
        font-weight: bold;
        display: flex;
        align-items: center;
        font-size: 18px;
    }

    nav a {
        text-decoration: none;
        color: #363636;
        margin-right: 25px;
        font-weight: 500;
    }

    /* CARD CENTRAL */
    .main-content {
        display: flex;
        justify-content: center;
        padding: 40px 0;
    }

    .card {
        background: #fff6c6;
        width: 70%;
        border-radius: 15px;
        padding: 25px;
        border: 4px solid #d6b36a;
    }

    .card-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

        .card-header h2 {
            margin: 0;
            font-size: 24px;
        }

    .new-btn {
        background: #d6b36a;
        color: white;
        padding: 8px 18px;
        border-radius: 10px;
        text-decoration: none;
        font-weight: bold;
        font-size: 14px;
        transition: background-color 0.3s ease, color 0.3s ease; /* Transição suave */
    }

        .new-btn:hover {
            background-color: #CCAC66; /* Cor de fundo ao passar o mouse */
            color: #FFFFFF; /* Cor do texto ao passar o mouse */
        }


    /* TABELA */
    .table-clientes {
        width: 100%;
        border-collapse: collapse;
        margin-top: 20px;
    }

        .table-clientes th {
            text-align: left;
            padding: 12px 0;
            font-weight: bold;
            border-bottom: 2px solid #d6b36a;
        }

        .table-clientes td {
            padding: 12px 0;
            vertical-align: middle;
        }

    .edit-btn {
        background: #8a8a8a;
        color: white;
        padding: 5px 12px;
        border-radius: 8px;
        text-decoration: none;
        margin-right: 8px;
    }

    .delete-btn {
        background: #b54845;
        color: white;
        padding: 5px 12px;
        border-radius: 8px;
        text-decoration: none;
    }

    /* Foto padrão tamanho */
    .cliente-foto {
        width: 60px;
        height: 60px;
        object-fit: cover;
        border-radius: 8px;
        border: 2px solid #e6d6a8;
    }
</style>
