@{
    ViewData["Title"] = "Login";
}

<div class="login-container">

    <div class="login-title">LOGIN</div>

    <form asp-action="Login" method="post">

        <label>Email</label>
        <input type="email" name="email" required />

        <label>Senha</label>
        <input type="password" name="senha" required />

        <button type="submit">ENTRAR</button>

        <!-- 🔹 NOVO BOTÃO CRIAR CONTA -->
        <a asp-controller="Cliente" asp-action="CriarCliente" class="btn-criar">CRIAR CONTA</a>

    </form>
</div>

<style>
    body {
        background-color: #c8b68a;
        font-family: Arial, sans-serif;
    }

    .login-container {
        width: 550px;
        margin: 70px auto;
        padding: 50px 40px;
        background-color: #c7bda8;
        border: 8px solid #a7956c;
        border-radius: 25px;
        box-sizing: border-box;
        text-align: center;
    }

    .login-title {
        display: inline-block;
        background-color: #a7956c;
        padding: 8px 25px;
        border-radius: 10px;
        font-size: 32px;
        color: white;
        margin-bottom: 40px;
    }

    .login-container input[type="email"],
    .login-container input[type="password"] {
        width: 75%;
        padding: 10px;
        margin: 12px 0 25px 0;
        border: none;
        border-radius: 5px;
        background: white;
        font-size: 16px;
    }

    .login-container label {
        display: block;
        font-size: 15px;
        color: white;
        margin-bottom: 5px;
    }

    .login-container button {
        background-color: #1b6625;
        color: white;
        border: none;
        padding: 12px 30px;
        border-radius: 8px;
        font-size: 16px;
        cursor: pointer;
        transition: 0.2s;
    }

        .login-container button:hover {
            background-color: #2e8b3a;
        }

    /* Botão Criar Conta */
    .btn-criar {
        display: inline-block;
        margin-top: 18px;
        background-color: #6b5332;
        color: white;
        padding: 12px 30px;
        border-radius: 8px;
        font-size: 16px;
        text-decoration: none;
        transition: 0.2s;
    }

        .btn-criar:hover {
            background-color: #8a6b41;
        }
</style>
