@model Lustrious.Models.Funcionario

<h2>Cadastra Funcionario</h2>

<form asp-action="CriarFuncionario" method="post">
	@Html.AntiForgeryToken()
	<div>
		<label>Nome</label>
		<input asp-for="Nome" required />
		<label>Email</label>
		<input asp-for="Email" required />
		<label>Senha</label>
		<input asp-for="Senha" required />

		<button type="submit">Salvar</button>
	</div>
</form>